@model Deezer.ViewModels.LoginViewModel


<div class="container" >
    <div class="col-md-offset-6">
        <div class="row">
            <div class="col-lg-12">
                <form name="myForm" class="justify-content-center work-form" method="post" asp-controller="Account" asp-action="Login" role="form">
                    <h2 class="form-header">LOG IN</h2>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR EMAIL</p>
                        <input type="email" id="quantity" asp-for="Email" class="input" value="">
                        <span class="errorSpan" id="errmsg" asp-validation-for="Email"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR PASSWORD</p>
                        <input type="email" asp-for="Password" class="input" value="">
                        <span class="errorSpan" asp-validation-for="Password"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="form-group form-field" >
                        <a class="label-link-txt" asp-area="" asp-controller="Account" asp-action="ForgotPassword">FORGOT PASSWORD</a>

                    </div>
                    <div class="form-group">
                        <div class=" tabs">
                            <input type="submit" name="register-submit" class="form-control btn submit-button" value="LOG IN" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
