@model Deezer.ViewModels.ForgotPasswordViewModel

<div class="container">
    <div class="col-md-offset-6">
        <div class="row">
            <div class="col-lg-12">
                <form name="myForm" class="justify-content-center work-form" method="post" asp-controller="Account" asp-action="ForgotPassword" role="form">
                    <h2 class="form-header">FORGOT PASSWORD</h2>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR EMAIL</p>
                        <input type="email" id="quantity" asp-for="Email" class="input" value="">
                        <span class="errorSpan" id="errmsg" asp-validation-for="Email"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                    

                    <div class="form-group">
                        <div class=" tabs">
                            <input type="submit" name="register-submit" class="form-control btn submit-button" value="FORGOT PASSWORD" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
