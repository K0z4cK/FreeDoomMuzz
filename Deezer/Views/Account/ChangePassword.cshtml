@model Deezer.ViewModels.ChangePasswordViewModel

<div class="container">
    <div class="col-md-offset-6">
        <div class="row">
            <div class="col-lg-12">
                <form name="myForm" class="justify-content-center work-form" method="post" asp-controller="Account" asp-action="ChangePassword" role="form">
                    <h2 class="form-header">FORGOT PASSWORD</h2>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR PASSWORD</p>
                        <input type="email" asp-for="NewPassword" class="input" value="">
                        <span class="errorSpan" asp-validation-for="NewPassword"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="form-group form-field">
                        <p class="label-txt">CONFIRM YOUR PASSWORD</p>
                        <input type="email" asp-for="NewPasswordConfirm" class="input" value="">
                        <span class="errorSpan" asp-validation-for="NewPasswordConfirm"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>

                    

                    <div class="form-group">
                        <div class=" tabs">
                            <input type="submit" name="register-submit" class="form-control btn submit-button" value="CHANGE PASSWORD" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>