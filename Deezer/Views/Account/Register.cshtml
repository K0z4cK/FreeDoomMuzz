@model Deezer.ViewModels.RegisterViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h2>REGISTER</h2>
                            <form  method="post" asp-controller="Account" asp-action="Register" role="form" >

                                <div asp-validation-summary="ModelOnly"></div>
                                <div >
                                    <input type="email"  asp-for="Email" class="form-control" placeholder="Email Address" value="">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div >
                                    <input type="text"  asp-for="FirstName" class="form-control" placeholder="First Name" value="">
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                                <div >
                                    <input type="text"  asp-for="LastName" class="form-control" placeholder="Last Name" value="">
                                    <span asp-validation-for="LastName"></span>
                                </div>
                                <div >
                                    <input type="text"  asp-for="UserName" class="form-control" placeholder="Username" value="">
                                    <span asp-validation-for="UserName"></span>
                                </div>

                                <div >
                                    <input type="password"  asp-for="Password" class="form-control" placeholder="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div >
                                    <input type="password"  asp-for="PasswordConfirm" class="form-control" placeholder="Confirm Password">
                                    <span asp-validation-for="PasswordConfirm"></span>
                                </div>
                                <div >
                                    <div class=" tabs">
                                        <input type="submit" name="register-submit" class="form-control btn btn-register" value="Register">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>