@model Deezer.ViewModels.RegisterViewModel

<div class="container">
    <div class="col-md-offset-6">
        <div class="row">
            <div class="col-lg-12"> 
                <form name="myForm" class="justify-content-center work-form" method="post" asp-controller="Account" asp-action="Register" role="form">
                    <h2 class="form-header">REGISTER</h2>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR EMAIL</p>
                        <input type="email" id="quantity" asp-for="Email" class="input" value="">
                        <span class="errorSpan" id="errmsg" asp-validation-for="Email"></span>
                        <div class="line-box" >
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR FIRST NAME</p>
                        <input type="text" asp-for="FirstName" class="input" value="">
                        <span class="errorSpan" asp-validation-for="FirstName"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR LAST NAME</p>
                        <input type="text" asp-for="LastName" class="input" value="">
                        <span class="errorSpan" asp-validation-for="LastName"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR USERNAME</p>
                        <input type="text" asp-for="UserName" class="input" value="">
                        <span class="errorSpan" asp-validation-for="UserName"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="form-group form-field">
                        <p class="label-txt">ENTER YOUR PASSWORD</p>
                        <input type="password" asp-for="Password" class="input" value="">
                        <span class="errorSpan" asp-validation-for="Password"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="form-group form-field">
                        <p class="label-txt">CONFIRM YOUR PASSWORD</p>
                        <input type="password" asp-for="PasswordConfirm" class="input" value="">
                        <span class="errorSpan" asp-validation-for="PasswordConfirm"></span>
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class=" tabs">
                            <input type="submit" name="register-submit" class="form-control btn submit-button" value="REGISTER" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
