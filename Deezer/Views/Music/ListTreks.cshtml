@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListTreks</title>
</head>
<body>
    <h1>@ViewBag.Title</h1>
    <table class="table table-hover">
        <tr>
            <th>
                №
            </th>
            <th>
                Name
            </th>
            <th>
                Artist
            </th>
            <th>
                Album
            </th>
        </tr>
        @{
            int i = 1;
            foreach (Treck item in Model.GetTrecks)
            {

                @await Html.PartialAsync("AllTreks", item)
                ++i;
            }
        }
    </table>
</body>
</html>
